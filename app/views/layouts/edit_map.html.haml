!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title CoffhexDev
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
  %body

    #menu-area
      -#= link_to 'Game', '/'
      = link_to 'Full Map', edit_map_full_hex_map_path
      = link_to 'Edit Plain Map', edit_map_edit_hexes_path( color: 'p' )
      = link_to 'Edit Forest Map', edit_map_edit_hexes_path( color: 'f' )
      = link_to 'Edit Bastion Map', edit_map_edit_hexes_path( color: 'b' )
      = link_to 'Edit Water Map', edit_map_edit_hexes_path( color: 'w' )
      = link_to 'Edit Hills Map', edit_map_edit_hexes_path( color: 'h' )
      = link_to 'Edit Roads', edit_map_edit_top_layer_path( layer: 'roads' )
      = link_to 'Edit Rivers', edit_map_edit_top_layer_path( layer: 'rivers' )
      = link_to 'Edit Borders', edit_map_edit_top_layer_path( layer: 'orf_border' )
      = link_to 'Hex Centers', edit_map_full_hex_map_path( show_centers: true )

    #board-area
      = yield
